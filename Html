    <script>
      function Grade() {
        const correctAnswers = {
          q1: "A", // Question 1: 10,000 years ago
          q2: "D", // Question 2: Southwest Asia
          q3: "B", // Question 3: Plantation
          q4: "A", // Question 4: Mediterranean
          q5: "B"  // Question 5: Urban sprawl
        };

        let score = 0;
        let grade = 0;
        let totalQuestions = 5;
        let feedback = "";

        // Loop through each question, check if the selected answer is correct
        for (let question in correctAnswers) {
          let selected = document.querySelector(`input[name="${question}"]:checked`);
          if (selected) {
            if (selected.value === correctAnswers[question]) {
              score++;
              feedback += `Question ${question.slice(1)}: Correct!<br>`;
              score + 10;
            } else {
              feedback += `Question ${question.slice(1)}: Incorrect. Correct answer is ${correctAnswers[question]}.<br>`;
            }
          } else {
            feedback += `Question ${question.slice(1)}: No answer selected. Correct answer is ${correctAnswers[question]}.<br>`;
          }
        }
        
        // Display the score and feedback
        document.getElementById("answer-display").innerHTML = `You scored ${score} out of ${totalQuestions}.<br><br>${feedback}`;
      }
    </script>
  </head>
